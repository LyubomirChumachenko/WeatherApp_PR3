<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Фиксированный цвет (например, #6200EE — фиолетовый из Material Design) -->
        <item name="android:statusBarColor">#262626</item>

        <!-- Отключаем прозрачность -->
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Для светлого текста в статус-баре (если цвет тёмный) -->
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetModal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomBottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/CustomBottomSheetShape</item>
    </style>

    <style name="CustomBottomSheetShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>


</resources>